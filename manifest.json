{
  "name": "Pomodoro Timer",
  "version": "3.0.0",
  "description": "Configurable pomodoro clock for your browser.",
  "homepage_url": "https://github.com/EmirYLMZ128/SideBarPomodoro",
  "manifest_version": 2,

  "icons": {
    "48": "Assest/IMG/logo48.png",
    "96": "Assest/IMG/logo96.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Pomodoro Timer ",
    "default_icon": { "48": "Assest/IMG/logo48.png" },
    "default_popup": "index.html"
  },
  "sidebar_action": {
    "default_icon": {
      "16": "Assest/IMG/logo16.png",
      "32": "Assest/IMG/logo32.png"
    },
    "default_title": "Pomodoro Timer",
    "default_panel": "index.html",
    "open_at_install":true
  }
}